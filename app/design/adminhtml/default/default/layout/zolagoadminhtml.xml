			<template>zolagoadminhtml/page/footer.phtml</template>			
		</action>    		
    	</reference>
    	<reference name="header">
		<action method="setTemplate">
			<template>zolagoadminhtml/page/header.phtml</template>			
		</action>    		
    	</reference>
    	<reference name="head">
