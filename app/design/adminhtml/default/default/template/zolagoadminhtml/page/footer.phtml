<div class="footer-inner">
<div class="footer-select">
    <p class="language-select"><?php echo $this->__('Interface Locale: %s', $this->getLanguageSelect()) ?></p>
    <p class="theme-select">
        <?php echo $this->helper('cmsmart_admintheme')->__('Current Theme:'); ?>
        <?php echo $this->getLayout()->createBlock('cmsmart_admintheme/adminhtml_themes_select')->getHtml(); ?>
    </p>
</div>
<div style="text-align: right;">
    <img src="<?php echo $this->getSkinUrl('img/poig/POIG_s_i.png'); ?>" width="300"/>
