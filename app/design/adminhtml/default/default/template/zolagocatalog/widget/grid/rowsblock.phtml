/**
 * Template for Mage_Adminhtml_Block_Widget_Grid
 *
 *  getId()
 *  getCollection()
 *  getColumns()
 *  getPagerVisibility()
 *  getVarNamePage()
 */
$columns = $this->getColumns();
$leftColumnsCount = 3;
$leftColumns = array_splice($columns, 0, $leftColumnsCount);
$bodyColumns = array_splice($columns, $leftColumnsCount);
?>

<?php if($this->getCollection()): ?>

    <?php $columns = $this->getColumns(); ?>
    <?php $leftColumnsCount = 3; ?>
    <?php $leftColumns = array_splice($columns, 0, $leftColumnsCount); ?>
    <?php $bodyColumns = array_splice($columns, $leftColumnsCount); ?>

    <div id="mass-grid" class="grid">
        <div id="grid-left-columns">
            <div class="table">
                <div class="tbody">
                    <?php foreach ($this->getCollection() as $_index=>$_item): ?>
                        <div title="<?php echo $this->getRowUrl($_item) ?>" class="clearfix <?php if ($_class = $this->getRowClass($_item)) echo $_class; ?>" >
                            <?php foreach ($leftColumns as $_column): ?>

                                <?php if ($this->shouldRenderCell($_item, $_column)):?>
                                    <?php $_rowspan = $this->getRowspan($_item, $_column);?>
                                    <div class="cell <?php echo $_column->getCssProperty() ?> <?php echo $this->getCellClass($_column, $_item);?>" <?php echo $this->getColumnWidthStyle($_column); ?>>
                                        <div>
                                            <?php echo (($_html = $_column->getRowField($_item)) != '' ? $_html : '&nbsp;') ?>
                                        </div>
                                    </div>
                                <?php endif;?>

                            <?php endforeach; ?>
                        </div>

                    <?php endforeach; ?>
                </div>

            </div>
        </div>

        <div id="grid-body">
            <div class="table">
                <div class="tbody">
                    <?php foreach ($this->getCollection() as $_index=>$_item): ?>
                        <div title="<?php echo $this->getRowUrl($_item) ?>" class="clearfix <?php if ($_class = $this->getRowClass($_item)) echo $_class; ?>" >
                            <?php foreach($bodyColumns as $_column): ?>

                                <?php if ($this->shouldRenderCell($_item, $_column)):?>
                                    <?php $_rowspan = $this->getRowspan($_item, $_column);?>
                                    <div class="cell <?php echo $_column->getCssProperty() ?> <?php echo $this->getCellClass($_column, $_item);?>" <?php echo $this->getColumnWidthStyle($_column); ?>>
                                        <div>
                                            <?php echo (($_html = $_column->getRowField($_item)) != '' ? $_html : '&nbsp;') ?>
                                        </div>
                                    </div>
                                <?php endif;?>

                            <?php endforeach; ?>
                        </div>

                    <?php endforeach; ?>
                </div>
            </div>
        </div>

        <input id="total-records" type="hidden" value="<?php echo $this->getCollection()->getSize(); ?>" />
    </div>

<?php endif ?>