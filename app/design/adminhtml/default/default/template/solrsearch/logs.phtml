<h2><?php echo Mage::helper('solrsearch')->__('Solr Bridge Logs') ?></h2><?php $logs = $this->getLogs (); ?><?php if(empty($logs)): ?><p><?php echo $this->__('There is no any log message available.')?></p><?php else:?><div class="grid">	<div class="hor-scroll">		<table cellspacing="0" id="productGrid_table" class="data">			<thead>				<tr class="headings">					<th>						<span class="nobr">							<?php echo $this->__('ID');?>						</span>					</th>					<th>						<span class="nobr">							<?php echo $this->__('Message');?>						</span>					</th>					<th>						<span class="nobr">							<?php echo $this->__('Date/Time');?>						</span>					</th>				</tr>			</thead>			<tbody>				<?php foreach ($logs as $log): ?>				<tr class="even pointer">					<td class=" a-right "><?php echo $log['logs_id']; ?></td>					<td class=" "><?php echo str_replace("\n", "<br />", $log['message']); ?></td>					<td class=" "><?php echo $log['update_at'] ?></td>				</tr>				<?php endforeach;?>			</tbody>		</table>	</div></div><?php endif;?>