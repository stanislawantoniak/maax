<script type="text/javascript">
//<![CDATA[
    var editForm = new varienForm('mapper_edit_form');
    var mapperControl = {
        save: function() {
            if (this.typeChange) {
                $('change_flag_element').value = '1';
            }
            editForm.submit();
            return false;
        },	
		run: function(){
			$("do_run").value = 1;
			editForm.submit();
