				details = jQuery('#details');

			if (actvie.prop('checked') == true) {
				details.show();
			}

			//actvie.switchButton();

			function switchHandler() {
				jQuery('[class*=GR_checkbox]').on("click", function () {
					details.toggle('slow');
				});
			}
