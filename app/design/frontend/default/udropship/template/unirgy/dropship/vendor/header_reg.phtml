<?php
$_session = Mage::getSingleton('udropship/session');

$_vendor = $_session->getVendor();

$locale = $locale = $this->getRequest()->getParam("locale");


if (!empty($locale)) {
    $_currentLocale = $locale;
} else {
    $_currentLocale = "pl_PL";
}

$currentUrl = Mage::helper('core/url')->getCurrentUrl();

$_logoHeader = Mage::app()->getStore($_vendor->getLabelStore())->getGroup()->getName();

$_allowedLocale = array(
    "pl_PL" => array(
        "symbol" => $this->__("PL"),
        "name" => $this->__("Polish")
    ),
    "en_US" => array(
        "symbol" => $this->__("EN"),
        "name" => $this->__("English")
    )
);

Mage::app()->getLocale()->setLocale($_currentLocale);
Mage::app()->getTranslator()->setLocale($_currentLocale);
Mage::app()->getTranslator()->init('frontend', true);

?>

<header class="header navbar navbar-fixed-top" role="banner">
    <!-- Top Navigation Bar -->
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand" href="<?php echo $this->getUrl("udropship/vendor/"); ?>">
            <img src="<?php echo $this->getSkinUrl('img/bootsrap/logo.png'); ?>" alt="logo"/>
            <strong><?php echo $this->escapeHtml($_logoHeader); ?></strong>
        </a>
        <!-- /logo -->

        <ul class="nav navbar-nav navbar-right">
            <!-- Locale -->
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <?php foreach ($_allowedLocale as $locale => $info): ?>
                        <?php if ($locale == $_currentLocale): ?>
                            <?php echo $this->escapeHtml($info['symbol']); ?>
                        <?php endif; ?>
                    <?php endforeach; ?>
                    <i class="icon-caret-down small"></i>
                </a>
                <ul class="dropdown-menu">
                    <?php foreach ($_allowedLocale as $locale => $info): ?>
                        <li>
                            <a href="<?php echo Mage::getUrl('umicrosite/vendor/register', array("locale" => $locale)); ?>">
                                <?php echo $this->escapeHtml($info['name']); ?>
                            </a>
                        </li>
                    <?php endforeach; ?>
                </ul>
            </li>
            <!-- /Locale -->
        </ul>

        <!-- /Top Right Menu -->
    </div>
    <!-- /top navigation bar -->
</header> <!-- /.header -->
	