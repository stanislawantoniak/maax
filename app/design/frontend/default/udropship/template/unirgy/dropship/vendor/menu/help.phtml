<script>
    var help = {

        init: function () {
            this.initButtons();
        },

        initButtons: function () {
            this.getBtn().click(function () {
                jQuery('.toggle-sidebar').click();
                if (!parseInt(help.getWrapper().css('width'))) {
                    var sng = "+"; // Show
                } else {
                    var sng = "-"; // Hide
                }
                help.getWrapper().stop().animate({
                    width: sng + "=500"
                }, 500);
            });
        },

        getWrapper: function () {
            return jQuery('#sidebar-help-wrapper');
        },

        getBtn: function () {
            return jQuery('.help-btn');
        }

    };

    jQuery(document).ready(function () {
        help.init();
    });
</script>