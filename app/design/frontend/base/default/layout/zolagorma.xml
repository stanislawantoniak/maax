<?xml version="1.0"?>
<layout version="0.1.0">
    <sales_rma_history>
        <label>Customer Rma History</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
             <block type="zolagorma/list" as="list" name="sales.rma.list"/>
        </reference>
    </sales_rma_history>	
    <sales_po_rmalist>
        <label>Customer Po History for RMA</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
             <block type="zolagopo/rma" as="list" name="sales.po.rma"/>
        </reference>
    </sales_po_rmalist>
    <sales_po_history>
        <label>Customer Po History</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
             <block type="zolagopo/list" as="list" name="sales.po.list"/>
        </reference>
    </sales_po_history>	
	<sales_po_newrma>
		<label>Customer My Account Order RMA View</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
			<block type="zolagopo/info" as="info" name="sales.po.info">
				<action method="addLink" translate="label" module="sales"><name>view</name><path>*/*/view</path><label>Order Information</label></action>
				<action method="addLink" translate="label" module="sales"><name>invoice</name><path>*/*/invoice</path><label>Invoices</label></action>
				<action method="addLink" translate="label" module="sales"><name>shipment</name><path>*/*/shipment</path><label>Shipments</label></action>
				<action method="addLink" translate="label" module="sales"><name>creditmemo</name><path>*/*/creditmemo</path><label>Refunds</label></action>
				<action method="addLink" translate="label" module="urma"><name>rma</name><path>*/*/rma</path><label>RMA</label></action>
				<action method="setInRma"><status>1</status></action>
			</block> 
            <block type="zolagorma/new" name="zolagorma.new" template="zolagorma/new.phtml">
            </block>
        </reference>
	</sales_po_newrma>
	
	
