<script type="text/javascript">
jQuery(function($){
	var form = $("#shipping-form");
	var specify = $(".specify", form);
	
	<?php if($this->canUseCarrier()):?>
	var carriers = $(".carrier :radio");
	var shippingZolagodhlPkgType = $("#shipping-specify_zolagodhl_type", form);
	var specifyZolagodhlPkgType = $(".specify-specify_zolagodhl_type", form);
	var specifyCarrier = $(".specify-carrier", form);
	var autotracking = $("#auto-tracking");
	var carrierTitle = $("#carrier_title");
	
	var handleCarrierChange = function(){
		specifyCarrier.addClass("hidden");
		var val = $(this).val();
		if($(this).is(":checked")){
			specifyCarrier.filter(".specify-carrier-"+val).removeClass("hidden")
		}
		autotracking.val("off");
		carrierTitle.val($(this).data("label"));
		switch(val){
			case "zolagodhl":
				autotracking.val("on");
				shippingZolagodhlPkgType.change();
			break;
			case "ups":
				// Process for ups
			break;
		}
	}
	
	// Package handling
	var handleZolagodhlPkgType = function(){
		if(!$(this).parents('.form-group').hasClass("hidden")){
			specifyZolagodhlPkgType.addClass("hidden");
			specifyZolagodhlPkgType.filter(".specify-specify_zolagodhl_type-"+$(this).val()).removeClass("hidden")
		}
	}
	
	$(".datepicker", form).datepicker().
			attr("placeholder", $.datepicker._defaults.dateFormat);
	
	// Hide all specified opts
	specify.addClass("hidden");
	
	// Register events
	carriers.change(handleCarrierChange);
	shippingZolagodhlPkgType.change(handleZolagodhlPkgType);
	
	// Trigger flow
	if(carriers.filter(":checked").length){
		carriers.filter(":checked").change();
	}else{
		carriers.filter(":eq(0)").change();
	}
	<?php else:?>
		
	<?php endif;?>
});
</script>