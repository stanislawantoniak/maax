<script type="text/javascript">
	jQuery(function($){
	<?php if($this->isBilling()):?>
		var form = $("#<?php echo $_type;?>-address-form"),
			checkboxClass = ".sales-document",
			checkbox = form.find(checkboxClass),
			checked = form.find(checkboxClass+':checked'),
			invoiceForPo = checked.val() ? true : false;
		checkbox.change(function(){
			var dependsFields = form.find(".invoice-data");
			if($(this).val()==1 && $(this).is(":checked")){
				dependsFields.show();
				invoiceForPo = true;
			}else{
				dependsFields.hide();
				invoiceForPo = false;
			}
		}).filter(":checked").change();
		form.validate({
			rules: {
				"postcode": {
					postcodeWithReplace: true,
					required: true
				},
				"firstname": {
					required: true
				},
				"lastname": {
					required: true
				},
				"telephone": {
					"validate-telephone": true
				},
				"street": {
					required: true
				},
				"city": {
					required: true
				}
			}
		});
	<?php else:?>
		var form = $("#<?php echo $_type;?>-address-form");
	    form.validate({
	        rules: {
	            "postcode": {
		            postcodeWithReplace: true,
		            required: true
	            },
		        "firstname": {
			        required: true
		        },
		        "lastname": {
			        required: true
		        },
		        "telephone": {
			        required: true,
			        "validate-telephone": true
		        },
		        "street": {
			        required: true
		        },
		        "city": {
			        required: true
		        }
	        }
	    });
	<?php endif;?>

		form.find('button[name=restore]').click(function() {
			form.validate().settings.ignore = "*";
			form.submit();
		});
	});
</script>