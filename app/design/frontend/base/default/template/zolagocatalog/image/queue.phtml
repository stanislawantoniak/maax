<div class="text-center">

<form method="post">
	<div id="uploader_wrapper">	</div>
</form>

<script type="text/javascript">
function init_uploader() {	
	// Setup html5 version
	jQuery('#uploader_wrapper').append('<div id="uploader"></div>');
	jQuery("#uploader").pluploadQueue({
		// General settings
		runtimes : 'html5,flash,silverlight,html4',
		url : '<?php echo Mage::getUrl('udprod/vendor_image/upload'); ?>',
		chunk_size: '1mb',
		rename : true,
		dragdrop: true,
		
		filters : {
			// Maximum file size
			max_file_size : '10mb',
			// Specify what files to browse for
			mime_types: [
				{title : "Image files", extensions : "jpg,gif,png,jpeg"},
			]
		},

		// Resize images on clientside if we can
		resize : {width : 320, height : 240, quality : 90},

		flash_swf_url : '../../js/Moxie.swf',
		silverlight_xap_url : '../../js/Moxie.xap',
	});
	var uploader = jQuery('#uploader').pluploadQueue();
	uploader.bind('UploadComplete',function() {
		elf.sync();
		alert('<?php echo Mage::helper('zolagocatalog')->__('Upload completed'); ?>');
		jQuery('#uploader').remove();
		init_uploader();
	});
}
jQuery(function() {
	init_uploader();
});
</script>
</div>