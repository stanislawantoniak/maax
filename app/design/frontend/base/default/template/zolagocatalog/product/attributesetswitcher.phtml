			<?php endforeach;?>
		</select>
	</form>
</div>
<script type="text/javascript">
	jQuery(function($){
		$("#attribute_set_id").change(function(){
			var target = $(this),
				url = target.data("base") + "attribute_set_id/" + target.val();
			document.location.href= url;
		});
	});
</script>