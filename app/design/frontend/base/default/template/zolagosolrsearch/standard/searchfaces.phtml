					<?php foreach ($this->getFilterBlocks() as $filterBlock): ?>
					<!-- Blocks here -->
						<?php echo $filterBlock->toHtml() ;?>
	                <?php endforeach; ?>
	                <?php /* echo $this->getPriceFacets()*/ ?>
	            </dl>
            <?php endif;?>
         </form>         
    </div>
