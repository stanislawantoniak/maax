										$selectedFacetValue = $this->formatFacetPrice($v);
									}
									?>
									
									<span class="label"><?php echo $this->__($this->getFacetLabel($key)); ?>:</span> <span class="value"><?php echo $this->facetFormat($selectedFacetValue) ?></span>
									
									
