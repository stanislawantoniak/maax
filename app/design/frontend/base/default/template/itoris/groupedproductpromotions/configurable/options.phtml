<?php  /* @var $this Mage_Catalog_Block_Product_View_Type_Configurable*/ ?>
<?php
$_product    = $this->getProduct();
$_attributes = Mage::helper('core')->decorateArray($this->getAllowAttributes());
$productId = $_product->getId();
$ruleId = $this->getRuleId();
?>
<?php if ($_product->isSaleable() && count($_attributes)):?>
<dl id="itoris_grouped_product_<?php  echo $productId . '_' . $ruleId ?>">
	<?php foreach($_attributes as $_attribute): ?>
	<dt><label class="required"><em>*</em><?php echo $_attribute->getLabel() ?></label></dt>
	<dd<?php if ($_attribute->decoratedIsLast){?> class="last"<?php }?>>
		<div class="input-box">
			<select name="super_product[<?php echo $productId ?>][super_attribute][<?php echo $_attribute->getAttributeId() ?>]" id="attribute<?php echo $_attribute->getAttributeId() ?>" class="required-entry super-attribute-select">
				<option><?php echo $this->__('Choose an Option...') ?></option>
			</select>
		</div>
	</dd>
	<?php endforeach; ?>
</dl>
<script type="text/javascript">
	//optionsPrice.reload = function(){};
    var spProductConfig = <?php echo $this->getJsonConfig() ?>;
    spProductConfig.containerId = 'itoris_grouped_product_<?php echo $productId . '_' . $ruleId ?>';
	var spConfig<?php echo $productId . '_' . $ruleId?> = new Product.Config(spProductConfig);
	spConfig<?php echo $productId . '_' . $ruleId?>.reloadPrice = function(){
		if (this.config.disablePriceReload) {
			return;
		}
		var price    = 0;
		var oldPrice = 0;
		for(var i=this.settings.length-1;i>=0;i--){
			var selected = this.settings[i].options[this.settings[i].selectedIndex];
			if(selected.config){
				price    += parseFloat(selected.config.price);
				oldPrice += parseFloat(selected.config.oldPrice);
			}
		}

		optionsPrice<?php echo $productId . '_' . $ruleId?>.changePrice('config', {'price': price, 'oldPrice': oldPrice});
		optionsPrice<?php echo $productId . '_' . $ruleId?>.reload();

		return price;

		if($('product-price-'+this.config.productId + '_<?php echo $ruleId?>')){
			$('product-price-'+this.config.productId + '_<?php echo $ruleId?>').innerHTML = price;
		}
		this.reloadOldPrice();
	}
    if (!itorisGroupedPromoOptions[<?php echo $ruleId?>]) {
        itorisGroupedPromoOptions[<?php echo $ruleId?>] = [];
    }
    itorisGroupedPromoOptions[<?php echo $ruleId?>][<?php echo $productId?>] = spConfig<?php echo $productId . '_' . $ruleId?>;
</script>
<?php endif;?>