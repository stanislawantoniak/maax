					compareLeft     = partial === true ? _right : _left,
					compareRight    = partial === true ? _left : _right;

				if(direction === 'both')
					return !!clientSize && ((compareBottom <= viewBottom) && (compareTop >= viewTop)) && ((compareRight <= viewRight) && (compareLeft >= viewLeft));
