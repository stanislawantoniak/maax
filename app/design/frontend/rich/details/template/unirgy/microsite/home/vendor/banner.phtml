		$.fn.visible = function(partial,hidden,direction){

			if (this.length < 1)
				return;

			var $t        = this.length > 1 ? this.eq(0) : this,
				t         = $t.get(0),
				vpWidth   = $w.width(),
				vpHeight  = $w.height(),
