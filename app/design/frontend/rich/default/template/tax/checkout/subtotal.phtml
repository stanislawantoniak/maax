/**
 * @var $this Mage_Tax_Block_Checkout_Subtotal
 * @see Mage_Tax_Block_Checkout_Subtotal
 */

$totals = $this->getQuote()->getTotals();
$_totalDiscount = isset($totals['discount']) ? $totals['discount'] : null;

?>
<?php if ($this->displayBoth()):?>
    <li>
        <span class="val_value_products"><?php echo $this->__("Products worth"); ?>:</span>
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValueExclTax()) ?>
    </li>
    <li>
        <span class="val_value_products"><?php echo $this->helper('tax')->__('Subtotal (Incl. Tax)') ?>:</span>
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValueInclTax()) ?>
    </li>
<?php else : ?>
    <li>
        <span class="val_value_products"><?php echo $this->__("Products worth"); ?>:</span>
        <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?>
    </li>
<?php endif;?>

<?php if($_totalDiscount):?>
    <li>
        <span class="val_value_products"><?php echo $_totalDiscount->getTitle(); ?>:</span>
        <?php echo Mage::helper('core')->formatPrice($_totalDiscount->getValue()); ?></span>
    </li>
<?php endif;?>