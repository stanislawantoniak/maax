<?xml version="1.0"?>
<config>
    <modules>
        <GH_Regulation>
            <version>0.1.1</version>
        </GH_Regulation>
    </modules>
    <global>
        <models>
            <ghregulation>
                <class>GH_Regulation_Model</class>
                <resourceModel>gh_regulation_resource</resourceModel>
            </ghregulation>
            <ghregulation_resource>
                <class>GH_Regulation_Model_Resource</class>
                <entities>
                    <regulation_kind>
                        <table>gh_regulation_kind</table>
                    </regulation_kind>
                    <regulation_type>
                        <table>gh_regulation_type</table>
                    </regulation_type>
                    <regulation_document>
                        <table>gh_regulation_document</table>
                    </regulation_document>
                    <regulation_document_vendor>
                        <table>gh_regulation_document_vendor</table>
                    </regulation_document_vendor>
                    <regulation_vendor_kind>
                        <table>gh_regulation_vendor_kind</table>
                    </regulation_vendor_kind>
                </entities>
            </ghregulation_resource>
        </models>
        <blocks>
            <ghregulation>
                <class>GH_Regulation_Block</class>
            </ghregulation>
        </blocks>
        <helpers>
            <ghregulation>
                <class>GH_Regulation_Helper</class>
            </ghregulation>
        </helpers>
        <resources>
            <ghregulation_setup>
                <setup>
                    <module>GH_Regulation</module>
                </setup>
            </ghregulation_setup>
        </resources>
    </global>
    <adminhtml>
        <menu>
            <sales>
                <children>
                    <udropship>
                        <children>
                            <vendor_regulations module="ghregulation">
                                <title>Vendor documents</title>
                                <sort_order>45</sort_order>
                                <children>
                                    <vendor_document_kind>
                                        <title>Documents kinds</title>
                                        <sort_order>10</sort_order>
                                        <action>ghregulation/adminhtml_kind</action>
                                    </vendor_document_kind>
                                    <vendor_document_type>
                                        <title>Documents types</title>
                                        <sort_order>20</sort_order>
                                        <action>ghregulation/adminhtml_type</action>
                                    </vendor_document_type>
                                    <vendor_documents>
                                        <title>Documents list</title>
                                        <sort_order>30</sort_order>
                                        <action>ghregulation/adminhtml_list</action>
                                    </vendor_documents>                                    
                                </children>
                            </vendor_regulations>
                        </children>
                    </udropship>
                </children>
            </sales>
        </menu>
    </adminhtml>
</config>