<?xml version="1.0"?>
<config>
    <modules>
        <GH_Regulation>
            <version>0.1.3</version>
        </GH_Regulation>
    </modules>
    <global>
        <models>
            <ghregulation>
                <class>GH_Regulation_Model</class>
                <resourceModel>ghregulation_resource</resourceModel>
            </ghregulation>
            <ghregulation_resource>
                <class>GH_Regulation_Model_Resource</class>
                <entities>
                    <regulation_kind>
                        <table>gh_regulation_kind</table>
                    </regulation_kind>
                    <regulation_type>
                        <table>gh_regulation_type</table>
                    </regulation_type>
                    <regulation_document>
                        <table>gh_regulation_document</table>
                    </regulation_document>
                    <regulation_document_vendor>
                        <table>gh_regulation_document_vendor</table>
                    </regulation_document_vendor>
                    <regulation_vendor_kind>
                        <table>gh_regulation_vendor_kind</table>
                    </regulation_vendor_kind>
                </entities>
            </ghregulation_resource>
            <umicrosite>
                <rewrite>
                    <observer>GH_Regulation_Model_DropshipMicrosite_Observer</observer>
                </rewrite>
            </umicrosite>
        </models>
        <blocks>
            <ghregulation>
                <class>GH_Regulation_Block</class>
            </ghregulation>
        </blocks>
        <helpers>
            <ghregulation>
                <class>GH_Regulation_Helper</class>
            </ghregulation>
        </helpers>
        <resources>
            <ghregulation_setup>
                <setup>
                    <module>GH_Regulation</module>
                </setup>
            </ghregulation_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <GH_Regulation before="Mage_Adminhtml">GH_Regulation_Adminhtml</GH_Regulation>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <ghregulation>
                    <file>ghregulation.xml</file>
                </ghregulation>
            </updates>
        </layout>
        <translate>
            <modules>
                <GH_Regulation>
                    <files>
                        <default>GH_Regulation.csv</default>
                    </files>
                </GH_Regulation>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <ghregulation>
                <use>standard</use>
                <args>
                    <module>GH_Regulation</module>
                    <frontName>regulation</frontName>
                </args>
            </ghregulation>
            <udropship>
                <args>
                    <modules>
                        <GH_Regulation before="Unirgy_Dropship">GH_Regulation_Dropship</GH_Regulation>
                    </modules>
                </args>
            </udropship>
        </routers>
        <translate>
            <modules>
                <GH_Regulation>
                    <files>
                        <default>GH_Regulation.csv</default>
                    </files>
                </GH_Regulation>
            </modules>
        </translate>
        <layout>
            <updates>
                <ghregulation>
                    <file>ghregulation.xml</file>
                </ghregulation>
            </updates>
        </layout>
    </frontend>
    <default>
        <udropship>
            <microsite>
                <confirmation_token_expiration_time>168</confirmation_token_expiration_time>
            </microsite>
        </udropship>
    </default>
</config>