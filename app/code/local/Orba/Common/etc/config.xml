<?xml version="1.0"?>
<config>
    <modules>
        <Orba_Common>
            <version>0.1.0</version>
        </Orba_Common>
    </modules>
    <global>
        <blocks>
            <orbacommon>
                <class>Orba_Common_Block</class>
            </orbacommon>
            <page>
                <rewrite>
                    <html_head>Orba_Common_Block_Page_Html_Head</html_head>
                </rewrite>
            </page>
        </blocks>
        <models>
            <orbacommon>
                <class>Orba_Common_Model</class>
            </orbacommon>
        </models>
        <resources>
            <orbacommon_setup>
                <setup>
                    <module>Orba_Common</module>
                    <class>Orba_Common_Model_Resource_Setup</class>
                </setup>
            </orbacommon_setup>
        </resources>
        <helpers>
            <orbacommon>
                <class>Orba_Common_Helper</class>
            </orbacommon>
        </helpers>
        <cache>
            <types>
                <ajax_response module="orbacommon" translate="label description">
                    <label>Ajax responses</label>
                    <description>Orba Common Ajax responses.</description>
                    <tags>AJAX_RESPONSE</tags>
                </ajax_response>
            </types>
        </cache>
    </global>
    <frontend>
        <routers>
            <orbacommon>
                <use>standard</use>
                <args>
                    <module>Orba_Common</module>
                    <frontName>orbacommon</frontName>
                </args>
            </orbacommon>
        </routers>
        <translate>
            <modules>
                <Orba_Common>
                    <files>
                        <default>Orba_Common.csv</default>
                    </files>
                </Orba_Common>
            </modules>
        </translate>
        <layout>
            <updates>
                <orbacommon>
                    <file>orbacommon.xml</file>
                </orbacommon>
            </updates>
        </layout>
    </frontend>
    <default>
    </default>
    <adminhtml>
        <translate>
            <modules>
                <Orba_Common>
                    <files>
                        <default>Orba_Common.csv</default>
                    </files>
                </Orba_Common>
            </modules>
        </translate>
    </adminhtml>
</config>
