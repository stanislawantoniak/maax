<?xml version="1.0"?>
<config>
    <modules>
        <Zolago_Solrsearch>
            <version>0.0.3</version>
        </Zolago_Solrsearch>
    </modules>
    <global>
		<resources>
            <zolagosolrsearch_setup>
                <setup>
                    <module>Zolago_Solrsearch</module>
                </setup>
            </zolagosolrsearch_setup>
        </resources>
        <models>
            <zolagosolrsearch>
                <class>Zolago_Solrsearch_Model</class>
                <resourceModel>zolagosolrsearch_resource</resourceModel>
            </zolagosolrsearch>
            <zolagosolrsearch_resource>
                <class>Zolago_Solrsearch_Model_Resource</class>
				<entities>
					<queue_item>
						<table>zolago_solrsearch_queue_item</table>
					</queue_item>
				</entities>
            </zolagosolrsearch_resource>
			<solrsearch>
				<rewrite>
					<data>Zolago_Solrsearch_Model_Data</data>
					<indexer>Zolago_Solrsearch_Model_Indexer</indexer>
					<solr>Zolago_Solrsearch_Model_Solr</solr>
					<ultility>Zolago_Solrsearch_Model_Ultility</ultility>
				</rewrite>
			</solrsearch>
        </models>
        <helpers>
            <zolagosolrsearch>
                <class>Zolago_Solrsearch_Helper</class>
            </zolagosolrsearch>
        </helpers>
        <blocks>
            <zolagosolrsearch>
                <class>Zolago_Solrsearch_Block</class>
            </zolagosolrsearch>
			<solrsearch>
				<rewrite>
					<faces>Zolago_Solrsearch_Block_Faces</faces>
					<faces_price>Zolago_Solrsearch_Block_Faces_Price</faces_price>
					<faces_range>Zolago_Solrsearch_Block_Faces_Range</faces_range>
				</rewrite>
			</solrsearch>
        </blocks>
		<events>
			<!-- Delete anywhere -->
			<catalog_product_delete_before>
				<observers>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>catalogProductDeleteBefore</method>
					</zolagosolrsearch>
				</observers>
			</catalog_product_delete_before>
			
			<!-- Process product save anywhere -->
			<catalog_product_save_after>
				<observers>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>catalogProductSaveAfter</method>
					</zolagosolrsearch>
				</observers>
			</catalog_product_save_after>
		
			
			<!-- Process category save anywhere -->
			<catalog_category_save_after>
				<observers>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>catalogCategorySaveAfter</method>
					</zolagosolrsearch>
				</observers>
			</catalog_category_save_after>
			
			<!-- Process mass -->
			<catalog_product_attribute_update_after>
				<observers>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>catalogProductAttributeUpdateAfter</method>
					</zolagosolrsearch>
				</observers>
			</catalog_product_attribute_update_after>
			
			<!-- Process mapper asign -->
			<zolago_mapper_after_assign_products>
				<observers>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>zolagoMapperAfterAssignProducts</method>
					</zolagosolrsearch>
				</observers>
			</zolago_mapper_after_assign_products>
			
			<!-- Procesing after response send -->
			<controller_front_send_response_after>
				<observers>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>controllerFrontSendResponseAfter</method>
					</zolagosolrsearch>
				</observers>
			</controller_front_send_response_after>
		</events>
    </global>
	<adminhtml>
		<events>
			<!-- Just disable -->
			<catalog_product_delete_after>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</catalog_product_delete_after>
			
			<!-- Just disable -->
			<catalog_product_save_after>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</catalog_product_save_after>
			
			<!-- Will process collected products -->
			<after_reindex_process_catalog_product_price>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>afterReindexProcessCatalogProductPrice</method>
					</zolagosolrsearch>
				</observers>
			</after_reindex_process_catalog_product_price>
			
			<!-- Implementing ... -->
			<catalogrule_after_apply>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
					<zolagosolrsearch>
						<class>zolagosolrsearch/observer</class>
						<method>catalogruleApplyAfter</method>
					</zolagosolrsearch>
				</observers>
			</catalogrule_after_apply>
			<end_process_event_catalog_product_catalog_reindex_price>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</end_process_event_catalog_product_catalog_reindex_price>
			<catalog_category_prepare_save>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</catalog_category_prepare_save>
			<end_process_event_catalog_category_save>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</end_process_event_catalog_category_save>
			<catalog_entity_attribute_save_after>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</catalog_entity_attribute_save_after>
			<tag_save_after>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</tag_save_after>
			<model_save_after>
				<observers>
					<solr_search>
						<type>disabled</type>
					</solr_search>
				</observers>
			</model_save_after>
		</events>
	</adminhtml>
    <frontend>
        <routers>
            <zolagosolrsearch>
                <use>standard</use>
                <args>
                    <module>Zolago_Solrsearch</module>
                    <frontName>zolagosolrsearch</frontName>
                </args>
            </zolagosolrsearch>
            <customer>  
                <args>  
                    <modules>  
                        <Zolago_Solrsearch before="Solrbridge_Solsearch">Zolago_Solrsearch</Zolago_Solrsearch>  
                    </modules>  
                </args>  
            </customer>
        </routers>
        <layout>
            <updates>
                <zolagosolrsearch>
                    <file>zolagosolrsearch.xml</file>
                </zolagosolrsearch>
            </updates>
        </layout>
		<translate>
			<modules>
				<Zolago_Solrsearch>
					<files>
						<default>Zolago_Solrsearch.csv</default>
					</files>
				</Zolago_Solrsearch>
			</modules>
		</translate>		
    </frontend>
</config>
