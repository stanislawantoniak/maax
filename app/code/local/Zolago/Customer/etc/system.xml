<?xml version="1.0" encoding="UTF-8"?>
<config>
	<sections>
		<customer>
			<groups>
				<agreements translate="label">
					<label>Customer agreements (to show "more" button place "|" inside of agreement text)</label>
					<frontend_type>text</frontend_type>
					<sort_order>1000</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<policy translate="label">
							<label>Policy</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</policy>
						<tos translate="label">
							<label>Terms of service</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</tos>
						<newsletter translate="label">
							<label>Newsletter</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</newsletter>
						<sms translate="label">
							<label>SMS</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</sms>
						<register_info translate="label">
							<label>Registration info</label>
							<sort_order>50</sort_order>
							<frontend_type>textarea</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</register_info>
					</fields>
				</agreements>
				<orders_attach>
					<label>Orders attachement</label>
					<frontend_type>text</frontend_type>
					<sort_order>1100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<email_template translate="label">
							<label>Confirmation email template</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_template>
						<email_identity translate="label">
							<label>Confirmation email sender</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_identity</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_identity>
					</fields>
				</orders_attach>
				<listing_products_cache>
					<label>Listing products cache</label>
					<frontend_type>text</frontend_type>
					<sort_order>1200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<expiration_time translate="label">
							<label>Expiration time in minutes</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</expiration_time>
					</fields>
				</listing_products_cache>
			</groups>
		</customer>
	</sections>
</config>