<?xml version="1.0"?>
<config>
    <modules>
        <Zolago_Customer>
            <version>0.0.6</version>
        </Zolago_Customer>
    </modules>
    <global>
        <models>
            <zolagocustomer>
                <class>Zolago_Customer_Model</class>
                <resourceModel>zolagocustomer_resource</resourceModel>
            </zolagocustomer>
            <zolagocustomer_resource>
                <class>Zolago_Customer_Model_Resource</class>
                <entities>
                    <emailtoken>
                        <table>zolago_customer_emailtoken</table>
                    </emailtoken>
                </entities>
            </zolagocustomer_resource>
            <customer>
                <rewrite>
                    <form>Zolago_Customer_Model_Customer_Form</form>
                </rewrite>
            </customer>
        </models>
        <helpers>
            <zolagocustomer>
                <class>Zolago_Customer_Helper</class>
            </zolagocustomer>
        </helpers>
        <blocks>
            <zolagocustomer>
                <class>Zolago_Customer_Block</class>
            </zolagocustomer>
			<customer>
				<rewrite>
					<account_navigation>Zolago_Customer_Block_Account_Navigation</account_navigation>
				</rewrite>
			</customer>
        </blocks>
        <resources>
            <zolagocustomer_setup>
                <setup>
                    <module>Zolago_Customer</module>
                </setup>
            </zolagocustomer_setup>
        </resources>
        <template>
            <email>
               <zolagocustomer_confirmemail>
                   <label>Confirm email</label>
                   <file>zolagocutomer_confirm_email.html</file>
                   <type>html</type>
               </zolagocustomer_confirmemail>
            </email>
        </template>
		<events>
			  <sales_order_payment_save_after>
                <observers>
                    <zolagocustomer>
                        <type>singleton</type>
                        <class>zolagocustomer/observer</class>
                        <method>salesOrderPaymentSaveAfter</method>
                    </zolagocustomer>
                </observers>
            </sales_order_payment_save_after>
			<customer_logout>
				 <observers>
                    <zolagocustomer>
                        <type>singleton</type>
                        <class>zolagocustomer/observer</class>
                        <method>customerLogout</method>
                    </zolagocustomer>
                </observers>
			</customer_logout>
		</events>
    </global>
    <frontend>
        <routers>
            <zolagocustomer>
                <use>standard</use>
                <args>
                    <module>Zolago_Customer</module>
                    <frontName>zolagocustomer</frontName>
                </args>
            </zolagocustomer>
            <customer>  
                <args>  
                    <modules>  
                        <Zolago_Customer before="Mage_Customer">Zolago_Customer</Zolago_Customer>  
                    </modules>  
                </args>  
            </customer> 
        </routers>
        <translate>
            <modules>
                <Zolago_Customer>
                    <files>
                        <default>Zolago_Customer.csv</default>
                    </files>
                </Zolago_Customer>
            </modules>
        </translate>
        <layout>
            <updates>
                <zolagocustomer>
                    <file>zolagocustomer.xml</file>
                </zolagocustomer>
            </updates>
        </layout>
    </frontend>
    <crontab>
        <jobs>
            <zolagocustomer_clear_old_tokens>
                <schedule>
                    <!-- Run every 2 hours -->
                    <cron_expr>0 */2 * * *</cron_expr>
                </schedule>
                <run>
                    <model>zolagocustomer/observer::cleanOldTokens</model>
                </run>
            </zolagocustomer_clear_old_tokens>
        </jobs>
    </crontab>
</config>
