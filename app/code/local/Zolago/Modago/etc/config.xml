<?xml version="1.0"?>
<config>
    <modules>
        <Zolago_Modago>
            <version>0.3.3</version>
        </Zolago_Modago>
    </modules>
	<frontend>
		<routers>
            <zolagomodago>
                <use>standard</use>
                <args>
                    <module>Zolago_Modago</module>
                    <frontName>modago</frontName>
                </args>
            </zolagomodago>
		</routers>
	</frontend>
    <global>
        <blocks>
            <zolagomodago>
                <class>Zolago_Modago_Block</class>
            </zolagomodago>
            <page>
                <rewrite>
                    <html>Zolago_Modago_Block_Page_Html</html>
                </rewrite>
            </page>
        </blocks>
        <helpers>
            <zolagomodago>
                <class>Zolago_Modago_Helper</class>
            </zolagomodago>
        </helpers>
        <resources>
            <zolagomodago_setup>
                <setup>
                    <module>Zolago_Modago</module>
                </setup>
            </zolagomodago_setup>
        </resources>
    </global>
	<default>
		<zolagomodago_catalog>
			<zolagomodago_cataloglisting>
				<load_on_start>24</load_on_start>
				<appended_when_scroll>28</appended_when_scroll>
				<load_more_offset>100</load_more_offset>
				<pixels_before_append>3000</pixels_before_append>
			</zolagomodago_cataloglisting>
		</zolagomodago_catalog>
	</default>
</config>
