<config>
    <sections>
        <promo translate="label" module="salesrule">
            <groups>
                <promotions_mail_settings translate="label" module="salesrule">
                    <label>Promotion mail settings</label>
                    <show_in_default>1</show_in_default>
                    <sort_order>20</sort_order>
                    <fields>
                        <mail_template translate="label" module="salesrule">
                            <label>Mail template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mail_template>
                        <mail_identity translate="label" module="salesrule">
                            <label>Promotion mail identity</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mail_identity>
                    </fields>
                </promotions_mail_settings>
            </groups>
        </promo>
    </sections>
</config>
