<?xml version="1.0"?>
<config>
    <modules>
        <Zolago_Dotpay>
            <version>0.0.1</version>
        </Zolago_Dotpay>
    </modules>
    <global>
		<models>
			<dotpay>
				<rewrite>
					<paymentMethod>Zolago_Dotpay_Model_PaymentMethod</paymentMethod>
				</rewrite>
			</dotpay>
		</models>
	</global>
	<frontend>
		<routers>
            <dotpay>  
                <args>  
                    <modules>  
                        <Zolago_Dotpay before="Dotpay_Dotpay">Zolago_Dotpay</Zolago_Dotpay>  
                    </modules>  
                </args>  
            </dotpay> 
        </routers>
	</frontend>
</config>
