<?xml version="1.0"?>
<config>
	<sections>
		<payment>
			<groups>
				<dotpay translate="label" module="paygate">
					<fields>
						<redirect_url translate="label">
							<label>Redirect URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</redirect_url>

						<api_url translate="label">
							<label>API URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</api_url>

						<cancel_time translate="label">
							<label>Cancel new transaction time</label>
							<comment>Time in minutes</comment>
							<frontend_type>text</frontend_type>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</cancel_time>

						<login translate="label">
							<label>Dotpay login</label>
							<frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</login>

						<password translate="label">
							<label>Dotpay password</label>
							<frontend_type>password</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</password>

					</fields>
				</dotpay>
			</groups>
		</payment>
	</sections>
</config>