<?xml version="1.0"?>
<config>
    <sections>
        <checkout translate="label" module="zolagocheckout">
            <show_in_store>1</show_in_store>
            <groups>
                <options translate="label">
                    <show_in_store>1</show_in_store>
                    <fields>
                        <checkout_order_deactivate translate="label">
                            <label>Block checkout</label>
                            <comment><![CDATA[Deactivate "Order now and pay" button]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_website>1</show_in_website>
                        </checkout_order_deactivate>
                        <checkout_wait_for_tags translate="label">
                            <label>Wait for external GTM tags</label>
                            <comment><![CDATA[in ms<br/>Time to wait for external tags after successful order and before redirect]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </checkout_wait_for_tags>
                    </fields>
                </options>
            </groups>
        </checkout>
    </sections>
</config>
