<?xml version="1.0"?>
<config>
    <modules>
        <Zolago_Catalog>
            <version>0.0.9</version>
        </Zolago_Catalog>
    </modules>
    <global>
        <models>
            <zolagocatalog>
                <class>Zolago_Catalog_Model</class>
                <resourceModel>zolagocatalog_resource</resourceModel>
            </zolagocatalog>
            <zolagocatalog_resource>
                <class>Zolago_Catalog_Model_Resource</class>
                <entities>
                    <category_filter>
                        <table>zolago_catalog_category_filter</table>
                    </category_filter>
                </entities>
            </zolagocatalog_resource>
			<catalog>
				<rewrite>
					<product_action>Zolago_Catalog_Model_Product_Action</product_action>
				</rewrite>
			</catalog>
        </models>
        <helpers>
            <zolagocatalog>
                <class>Zolago_Catalog_Helper</class>
            </zolagocatalog>
        </helpers>
        <blocks>
            <zolagocatalog>
                <class>Zolago_Catalog_Block</class>
            </zolagocatalog>
			<catalog>
				<rewrite>
					<breadcrumbs>Zolago_Catalog_Block_Breadcrumbs</breadcrumbs>
				</rewrite>
			</catalog>
        </blocks>
        <resources>
            <zolagocatalog_setup>
                <setup>
                    <module>Zolago_Catalog</module>
                </setup>
            </zolagocatalog_setup>
        </resources>
    </global>
    <frontend>
        <routers>
			<!--
            <catalog>  
                <args>  
                    <modules>  
                        <Zolago_Catalog before="Mage_Catalog">Zolago_Catalog</Zolago_Catalog>  
                    </modules>  
                </args>  
            </catalog> 
			-->
			<udprod>
				<args>
					<modules>
						<zolagocatalog>Zolago_Catalog</zolagocatalog> 
					</modules>
				</args>
			</udprod>
        </routers>
		<layout>
			<updates>
				<zolagocatalog>
					<file>zolagocatalog.xml</file>
				</zolagocatalog>
			</updates>
		</layout>
		<translate>
			<modules>
				<Zolago_Catalog>
					<files>
						<default>Zolago_Catalog.csv</default>
					</files>
				</Zolago_Catalog>
			</modules>
		</translate>		
    </frontend>
    <adminhtml>
		<translate>
			<modules>
				<Zolago_Catalog>
					<files>
						<default>Zolago_Catalog.csv</default>
					</files>
				</Zolago_Catalog>
			</modules>
		</translate>
    </adminhtml>	
</config>
