<?xml version="1.0" encoding="utf-8"?>
<config>
	<modules>
		<Zolago_Newsletter>
			<version>0.0.1</version>
		</Zolago_Newsletter>
	</modules>
	<frontend>
		<routers>
			<newsletter>
				<args>
					<modules>
						<Zolago_Newsletter before="Mage_Newsletter">Zolago_Newsletter</Zolago_Newsletter>
					</modules>
				</args>
			</newsletter>
		</routers>
	</frontend>
	<global>
		<helpers>
			<zolagonewsletter>
				<class>Zolago_Newsletter_Helper</class>
			</zolagonewsletter>
		</helpers>
		<template>
			<email>
				<newsletter_invitation_email_template module="zolagonewsletter">
					<label>Newsletter invitation</label>
					<file>newsletter_invitation.html</file>
					<type>html</type>
				</newsletter_invitation_email_template>
			</email>
		</template>
	</global>
	<default>
		<newsletter>
			<subscription>
				<invitation>1</invitation>
				<invitation_email_identity>support</invitation_email_identity>
				<invitation_email_template>newsletter_invitation_email_template</invitation_email_template>
				<invitation_repeat>0</invitation_repeat>
			</subscription>
		</newsletter>
	</default>
</config> 