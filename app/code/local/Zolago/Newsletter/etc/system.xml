<?xml version="1.0" encoding="UTF-8"?>
<config>
	<sections>
		<newsletter>
			<groups>
				<zolagosubscription>
					<label>Newsletter Invitation Config</label>
					<frontend_type>text</frontend_type>
					<show_in_default>1</show_in_default>
					<sort_order>2</sort_order>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<invitation translate="label">
							<label>Send invitation emails</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</invitation>
						<invitation_email_identity translate="label">
							<label>Invitation Email Sender</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_identity</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</invitation_email_identity>
						<invitation_email_template translate="label">
							<label>Invitation Email Template</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</invitation_email_template>
						<invitation_repeat translate="label">
							<label>Repeat invitation</label>
							<comment><![CDATA[Send Invitation Emails to users who already had been invited or are currently unsubscribed/unconfirmed]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</invitation_repeat>
						<confirmation_sales_rule translate="label">
							<label>Coupon in thank you email</label>
							<comment><![CDATA[Choose sales rule that will be used while sending coupon codes for newly subscribed emails]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>zolagosalesrule/activeRules</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
						</confirmation_sales_rule>
					</fields>
				</zolagosubscription>
			</groups>
		</newsletter>
	</sections>
</config>