<?xml version="1.0"?>
<config>
    <modules>
        <Zolago_SalesManago>
            <version>0.1.0</version>
        </Zolago_SalesManago>
    </modules>
    <frontend>
        <events>
            <customer_register_success>
                <observers>
                    <salesmanago_tracking_observer>
                        <type>disabled</type>
                    </salesmanago_tracking_observer>
                    <zolago_salesmanago_observer>
                        <type>singleton</type>
                        <class>Zolago_SalesManago_Model_Observer</class>
                        <method>customer_register_success</method>
                    </zolago_salesmanago_observer>
                </observers>
            </customer_register_success>
            <newsletter_subscriber_save_before>
                <observers>
                    <salesmanago_tracking_observer>
                        <type>disabled</type>
                    </salesmanago_tracking_observer>
                </observers>
            </newsletter_subscriber_save_before>
            <newsletter_subscriber_save_after>
                <observers>
                    <zolago_salesmanago_observer>
                        <type>singleton</type>
                        <class>Zolago_SalesManago_Model_Observer</class>
                        <method>newsletter_subscriber_save_after</method>
                    </zolago_salesmanago_observer>
                </observers>
            </newsletter_subscriber_save_after>

        </events>
        <routers>
            <frontend>
                <args>
                    <modules>
                        <zolago_salesmanago before="SalesManago_Tracking">Zolago_SalesManago</zolago_salesmanago>
                    </modules>
                </args>
            </frontend>
        </routers>
    </frontend>
    <global>
        <models>
            <zolagosalesmanago>
                <class>Zolago_SalesManago_Model</class>
                <resourceModel>zolago_salesmanago_resource</resourceModel>
            </zolagosalesmanago>
            <zolagosalesmanago_resource>
                <class>Zolago_SalesManago_Model_Resource</class>
            </zolagosalesmanago_resource>
            <salesmanago>
                <rewrite>
                    <observer>Zolago_SalesManago_Model_Observer</observer>
                </rewrite>
            </salesmanago>
        </models>
        <blocks>
            <salesmanago>
                <class>Zolago_SalesManago_Tracking_Block</class>
            </salesmanago>
        </blocks>
        <helpers>
            <zolagosalesmanago>
                <class>Zolago_SalesManago_Helper</class>
            </zolagosalesmanago>
            <tracking>
                <rewrite>
                    <data>Zolago_SalesManago_Helper_Data</data>
                </rewrite>
            </tracking>
        </helpers>
        <events>
            <customer_register_success>
                <observers>
                    <salesmanago_tracking_observer>
                        <type>disabled</type>
                    </salesmanago_tracking_observer>
                </observers>
            </customer_register_success>
            <newsletter_subscriber_save_before>
                <observers>
                    <salesmanago_tracking_observer>
                        <type>disabled</type>
                    </salesmanago_tracking_observer>
                </observers>
            </newsletter_subscriber_save_before>
        </events>
        <resources>
            <salesmanago>
                <setup>
                    <module>Zolago_SalesManago_Tracking</module>
                </setup>
            </salesmanago>
        </resources>
    </global>
</config>