<?xml version="1.0"?>
<config>
	<modules>
		<Zolago_Dropship>
			<version>0.0.3</version>
		</Zolago_Dropship>
	</modules>
	<global>
		<models>
			<zolagodropship>
				<class>Zolago_Dropship_Model</class>
                <resourceModel>zolagodropship_resource</resourceModel>
			</zolagodropship>
            <zolagodropship_resource>
                <class>Zolago_Dropship_Model_Resource</class>
                <entities>
                    <preferences>
                        <table>zolago_vendor_preferences</table>
                    </preferences>
                </entities>
            </zolagodropship_resource>
			<udropship>
				<rewrite>
					<session>Zolago_Dropship_Model_Session</session>
					<vendor>Zolago_Dropship_Model_Vendor</vendor>
					<!-- overide order shippign address id to shipment shipping address id -->
					<pdf_shipment>Zolago_Dropship_Model_Pdf_Shipment</pdf_shipment>
					<!-- Vendor model -->
					<vendor>Zolago_Dropship_Model_Vendor</vendor>
				</rewrite>
			</udropship>
			<udropship_mysql4>
				<rewrite>
					<vendor>Zolago_Dropship_Model_Resource_Vendor</vendor>
				</rewrite>
			</udropship_mysql4>



			<sales>
				<rewrite>
					<!-- overide order shippign address id to shipment shipping address id -->
					<order_pdf_shipment>Zolago_Dropship_Model_Pdf_Shipment</order_pdf_shipment>
				</rewrite>
			</sales>
		</models>
		<helpers>
		  <zolagodropship>
			<class>Zolago_Dropship_Helper</class>
		  </zolagodropship>
			<udropship>
				<rewrite>
					<data>Zolago_Dropship_Helper_Data</data>
					<item>Zolago_Dropship_Helper_Item</item>
					<catalog>Zolago_Dropship_Helper_Catalog</catalog>					
				</rewrite>
			</udropship>
		</helpers>
		<blocks>
			<zolagodropship>
				<class>Zolago_Dropship_Block</class>
			</zolagodropship>
			<udropship>
				<rewrite>
					<vendor_preferences>Zolago_Dropship_Block_Vendor_Preferences</vendor_preferences>
					<vendor_shipment_info>Zolago_Dropship_Block_Vendor_Shipment_Info</vendor_shipment_info>
					<adminhtml_systemConfigFormField_categoriesSelect>Zolago_Dropship_Block_Adminhtml_SystemConfigFormField_CategoriesSelect</adminhtml_systemConfigFormField_categoriesSelect>
					<adminhtml_vendor_edit_tab_preferences>Zolago_Dropship_Block_Adminhtml_Vendor_Edit_Tab_Preferences</adminhtml_vendor_edit_tab_preferences>
				</rewrite>
			</udropship>
		</blocks>
		<helpers>
			<zolagodropship>
				<class>Zolago_Dropship_Helper</class>
			</zolagodropship>
		</helpers>
		<resources>
			<zolagodropship_setup>
				<setup>
					<module>Zolago_Dropship</module>
				</setup>
			</zolagodropship_setup>
		</resources>
		<udropship>
            <vendor>
                <fieldsets>
                    <marketing>
                        <legend>Marketing content</legend>
                        <position>120</position>
                    </marketing>
                    <dhl>
                        <legend>DHL</legend>
                        <position>140</position>
                    </dhl>
                    <orbaups>
                        <legend>UPS</legend>
                        <position>160</position>
                    </orbaups>
                    <rma_contact>
                        <legend>RMA contact data</legend>
                        <position>181</position>
                    </rma_contact>
                    <rma_executive>
                        <legend>RMA executive</legend>
                        <position>182</position>
                    </rma_executive>
                    <rma>
                        <legend>RMA Settings</legend>
                        <position>180</position>
                    </rma>
                    <company_data>
                        <legend>Company data</legend>
                        <position>11</position>
                    </company_data>
                    <company_contact_data>
                        <legend>Company contact data</legend>
                        <position>11</position>
                    </company_contact_data>
                    <executive_contact>
                        <legend>Executive contact (business)</legend>
                        <position>12</position>
                    </executive_contact>
                    <administrator_contact>
                        <legend>Administrator contact (ITC or business)</legend>
                        <position>12</position>
                    </administrator_contact>
                </fieldsets>

                <fields>
                	<super_vendor_id>
                        <label>Super vendor</label>
                        <type>select</type>
						<source_model>zolagodropship/source</source_model>
                        <source>allvendorswithempty</source>
                        <fieldset>integration</fieldset>
                        <position>0</position>
                    </super_vendor_id>
                	<marketing_store_information>
                        <label>Main store menu - marketing store information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>10</position>
                    </marketing_store_information>
                	<terms_seller_information>
                        <label>Main store menu - terms - seller information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>20</position>
                    </terms_seller_information>
                	<terms_delivery_information>
                        <label>Main store menu - terms - delivery information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>30</position>
                    </terms_delivery_information>
                	<terms_return_information>
                        <label>Product - terms - return information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>40</position>
                    </terms_return_information>
                	<store_delivery_headline>
                        <label>Product - store section - delivery headline</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>50</position>
                    </store_delivery_headline>
                	<store_return_headline>
                        <label>Product - store section - return headline</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>60</position>
                    </store_return_headline>
                	<product_short_information>
                        <label>Product - short delivery and returns information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>70</position>
                    </product_short_information>
					<!-- DHL -->
                	<use_dhl>
                        <label>Use DHL</label>
                        <type>select</type>
                        <fieldset>dhl</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <dhl_login>1</dhl_login>
                            <dhl_password>1</dhl_password>
							<dhl_account>1</dhl_account>
							<dhl_ecas>1</dhl_ecas>
							<dhl_terminal>1</dhl_terminal>
                        </depend_fields>
                        <position>10</position>
                    </use_dhl>
                	<dhl_account>
                        <label>DHL account</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>15</position>
                    </dhl_account>
                	<dhl_login>
                        <label>DHL login</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>20</position>
                    </dhl_login>
                	<dhl_password>
                        <label>DHL password</label>
                        <type>password</type>
                        <fieldset>dhl</fieldset>
                        <position>30</position>
                    </dhl_password>
                	<dhl_ecas>
                        <label>DHL eCas id</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>40</position>
                    </dhl_ecas>
                	<dhl_terminal>
                        <label>Terminal code</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>50</position>
                    </dhl_terminal>
                    <use_orbaups>
                        <label>Use UPS</label>
                        <type>select</type>
                        <fieldset>orbaups</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <orbaups_login>1</orbaups_login>
                            <orbaups_password>1</orbaups_password>
							<orbaups_account>1</orbaups_account>
                        </depend_fields>
                        <position>55</position>
                    </use_orbaups>
                	<orbaups_account>
                        <label>UPS license key</label>
                        <type>text</type>
                        <fieldset>orbaups</fieldset>
                        <position>60</position>
                    </orbaups_account>
                	<orbaups_login>
                        <label>UPS login</label>
                        <type>text</type>
                        <fieldset>orbaups</fieldset>
                        <position>70</position>
                    </orbaups_login>
                	<orbaups_password>
                        <label>UPS password</label>
                        <type>password</type>
                        <fieldset>orbaups</fieldset>
                        <position>80</position>
                    </orbaups_password>
                    <!-- Rma -->
                    <dhl_rma>
                        <label>Use another DHL account for RMA</label>
                        <type>select</type>
                        <fieldset>rma</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <dhl_rma_login>1</dhl_rma_login>
                            <dhl_rma_password>1</dhl_rma_password>
							<dhl_rma_account>1</dhl_rma_account>
                        </depend_fields>
                        <position>10</position>
                    </dhl_rma>
                    <orbaups_rma>
                        <label>Use another UPS account for RMA</label>
                        <type>select</type>
                        <fieldset>rma</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <orbaups_rma_login>1</orbaups_rma_login>
                            <orbaups_rma_password>1</orbaups_rma_password>
							<orbaups_rma_account>1</orbaups_rma_account>
                        </depend_fields>
                        <position>33</position>
                    </orbaups_rma>
                	<dhl_rma_account>
                        <label>Account number</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>15</position>
                    </dhl_rma_account>
                	<dhl_rma_login>
                        <label>DHL login</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>20</position>
                    </dhl_rma_login>
                	<dhl_rma_password>
                        <label>DHL password</label>
                        <type>password</type>
                        <fieldset>rma</fieldset>
                        <position>30</position>
                    </dhl_rma_password>
                	<orbaups_rma_account>
                        <label>License key</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>35</position>
                    </orbaups_rma_account>
                	<orbaups_rma_login>
                        <label>UPS login</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>40</position>
                    </orbaups_rma_login>
                	<orbaups_rma_password>
                        <label>UPS password</label>
                        <type>password</type>
                        <fieldset>rma</fieldset>
                        <position>45</position>
                    </orbaups_rma_password>


                    <!--Company data-->
                    <company_name>
                        <label>Company name</label>
                        <type>text</type>
                        <fieldset>company_data</fieldset>
                        <position>65</position>
                    </company_name>
                    <tax_no>
                        <label>Tax identification no</label>
                        <type>text</type>
                        <fieldset>company_data</fieldset>
                        <position>66</position>
                    </tax_no>
                    <!--Company contact data-->
                    <www>
                        <label>www</label>
                        <type>text</type>
                        <fieldset>company_contact_data</fieldset>
                        <position>67</position>
                    </www>
                    <contact_email>
                        <label>Email</label>
                        <type>text</type>
                        <fieldset>company_contact_data</fieldset>
                        <position>48</position>
                    </contact_email>
                    <contact_telephone>
                        <label>Phone</label>
                        <type>text</type>
                        <fieldset>company_contact_data</fieldset>
                        <position>69</position>
                    </contact_telephone>
                    <!--Executive contact (business)-->
                    <executive_firstname>
                        <label>Name</label>
                        <type>text</type>
                        <fieldset>executive_contact</fieldset>
                        <position>1</position>
                    </executive_firstname>
                    <executive_lastname>
                        <label>Surname</label>
                        <type>text</type>
                        <fieldset>executive_contact</fieldset>
                        <position>2</position>
                    </executive_lastname>
                    <executive_telephone>
                        <label>Phone</label>
                        <type>text</type>
                        <fieldset>executive_contact</fieldset>
                        <position>3</position>
                    </executive_telephone>
                    <executive_telephone_mobile>
                        <label>Mobile</label>
                        <type>text</type>
                        <fieldset>executive_contact</fieldset>
                        <position>4</position>
                    </executive_telephone_mobile>


                    <!--Administrator contact (ITC or business)-->
                    <administrator_firstname>
                        <label>Name</label>
                        <type>text</type>
                        <fieldset>administrator_contact</fieldset>
                        <position>70</position>
                    </administrator_firstname>
                    <administrator_lastname>
                        <label>Surname</label>
                        <type>text</type>
                        <fieldset>administrator_contact</fieldset>
                        <position>71</position>
                    </administrator_lastname>
                    <administrator_telephone>
                        <label>Phone</label>
                        <type>text</type>
                        <fieldset>administrator_contact</fieldset>
                        <position>72</position>
                    </administrator_telephone>
                    <administrator_telephone_mobile>
                        <label>Mobile</label>
                        <type>text</type>
                        <fieldset>administrator_contact</fieldset>
                        <position>73</position>
                    </administrator_telephone_mobile>

                    <!--RMA contact data-->
                    <rma_email>
                        <label>Email</label>
                        <type>text</type>
                        <fieldset>rma_contact</fieldset>
                        <position>74</position>
                    </rma_email>
                    <rma_telephone>
                        <label>Phone</label>
                        <type>text</type>
                        <fieldset>rma_contact</fieldset>
                        <position>75</position>
                    </rma_telephone>

                    <!--RMA executive-->
                    <rma_executive_telephone>
                        <label>Phone</label>
                        <type>text</type>
                        <fieldset>rma_executive</fieldset>
                        <position>76</position>
                    </rma_executive_telephone>
                    <rma_executive_telephone_mobile>
                        <label>Mobile</label>
                        <type>text</type>
                        <fieldset>rma_executive</fieldset>
                        <position>77</position>
                    </rma_executive_telephone_mobile>
                    <rma_executive_email>
                        <label>Email</label>
                        <type>text</type>
                        <fieldset>rma_executive</fieldset>
                        <position>78</position>
                    </rma_executive_email>


                    <!-- Product Review -->
                	<review_status>
                        <label>Product Review Status</label>
                        <type>select</type>
                        <fieldset>microsite</fieldset>
						<source_model>zolagodropship/source_review</source_model>
                        <position>800</position>
                    </review_status>					
					<!-- label store -->
					<label_store>
                        <label>Label store</label>
                        <type>select</type>
						<source_model>zolagodropship/source_store</source_model>
                        <fieldset>microsite</fieldset>
						<only_admin>1</only_admin>
                        <position>500</position>
                    </label_store>
					<!-- category -->
					<root_category>
                        <label>Root categories</label>
						<frontend_model>zolagodropship/adminhtml_vendor_helper_form_category</frontend_model>
                        <fieldset>microsite</fieldset>
						<only_admin>1</only_admin>
                        <position>600</position>
                    </root_category>
					<!-- design -->
					<custom_design>
                        <label>Custom design</label>
						<frontend_model>zolagodropship/adminhtml_vendor_helper_form_design</frontend_model>
                        <fieldset>microsite</fieldset>
						<only_admin>1</only_admin>
                        <position>700</position>
                    </custom_design>
				</fields>
			</vendor>
		</udropship>
		<events>
			<sales_order_shipment_track_save_before>
				<observers>
					<add_orba_shipping_data>
						<class>zolagodropship/observer</class>
						<method>addOrbaShippingData</method>
					</add_orba_shipping_data>
				</observers>				
			</sales_order_shipment_track_save_before>
		</events>		
	</global>
	<frontend>
		<block>
			<zolagodropship>
				<class>Zolago_Dropship_Block_Pos</class>
			</zolagodropship>
		</block>
		<events>
			<core_locale_set_locale>
                <observers>
                    <bind_locale>
                        <class>zolagodropship/observer</class>
                        <method>bindLocale</method>
                    </bind_locale>
                </observers>
            </core_locale_set_locale>
		</events>
		<routers>
			<zolagodropship>
				<use>standard</use>
				<args>
					<module>Zolago_Dropship</module>
					<frontName>zolagdropship</frontName>
				</args>
			</zolagodropship>
			<udropship>
				<args>
					<modules>
						<Zolago_Dropship before="Unirgy_Dropship">Zolago_Dropship</Zolago_Dropship>
					</modules>
				</args>
			</udropship>
		</routers>
		<layout>
			<updates>
				<zolagodropship>
					<file>zolagodropship.xml</file>
				</zolagodropship>
			</updates>
		</layout>
		<translate>
			<modules>
				<Zolago_Dropship>
					<files>
						<default>Zolago_Dropship.csv</default>
					</files>
				</Zolago_Dropship>
			</modules>
		</translate>		
	</frontend>
	<admin>
		<routers>
			<udropshipadmin>
				<args>
					<modules>
						<zolagodropshipl before="Unirgy_Dropship_Adminhtml">Zolago_Dropship_Adminhtml</zolagodropshipl>
					</modules>
				</args>
			</udropshipadmin>
		</routers>
	</admin>
	<adminhtml>
		<translate>
			<modules>
				<Zolago_Dropship>
					<files>
						<default>Zolago_Dropship.csv</default>
					</files>
				</Zolago_Dropship>
			</modules>
		</translate>
	</adminhtml>
</config>
