<?xml version="1.0"?>
<config>
	<modules>
		<Zolago_Dropship>
			<version>0.0.4</version>
		</Zolago_Dropship>
	</modules>
	<global>
		<models>
			<zolagodropship>
				<class>Zolago_Dropship_Model</class>
                <resourceModel>zolagodropship_resource</resourceModel>
			</zolagodropship>
            <zolagodropship_resource>
                <class>Zolago_Dropship_Model_Resource</class>
                <entities>
                    <preferences>
                        <table>zolago_vendor_preferences</table>
                    </preferences>
                </entities>
            </zolagodropship_resource>
			<udropship>
				<rewrite>
					<session>Zolago_Dropship_Model_Session</session>
					<vendor>Zolago_Dropship_Model_Vendor</vendor>
					<!-- overide order shippign address id to shipment shipping address id -->
					<pdf_shipment>Zolago_Dropship_Model_Pdf_Shipment</pdf_shipment>
					<!-- Vendor model -->
					<vendor>Zolago_Dropship_Model_Vendor</vendor>
					<!-- Observer model -->
					<observer>Zolago_Dropship_Model_Observer</observer>
                    <observer>Zolago_Dropship_Model_Observer</observer>
                </rewrite>
			</udropship>
			<udropship_mysql4>
				<rewrite>
					<vendor>Zolago_Dropship_Model_Resource_Vendor</vendor>
				</rewrite>
			</udropship_mysql4>



			<sales>
				<rewrite>
					<!-- overide order shippign address id to shipment shipping address id -->
					<order_pdf_shipment>Zolago_Dropship_Model_Pdf_Shipment</order_pdf_shipment>
				</rewrite>
			</sales>
		</models>
		<helpers>
		  <zolagodropship>
			<class>Zolago_Dropship_Helper</class>
		  </zolagodropship>
			<udropship>
				<rewrite>
					<data>Zolago_Dropship_Helper_Data</data>
					<item>Zolago_Dropship_Helper_Item</item>
					<catalog>Zolago_Dropship_Helper_Catalog</catalog>					
				</rewrite>
			</udropship>
		</helpers>
		<blocks>
			<zolagodropship>
				<class>Zolago_Dropship_Block</class>
			</zolagodropship>
			<udropship>
				<rewrite>
					<vendor_preferences>Zolago_Dropship_Block_Vendor_Preferences</vendor_preferences>
					<vendor_shipment_info>Zolago_Dropship_Block_Vendor_Shipment_Info</vendor_shipment_info>
					<adminhtml_systemConfigFormField_categoriesSelect>Zolago_Dropship_Block_Adminhtml_SystemConfigFormField_CategoriesSelect</adminhtml_systemConfigFormField_categoriesSelect>
					<adminhtml_vendor_edit_tab_preferences>Zolago_Dropship_Block_Adminhtml_Vendor_Edit_Tab_Preferences</adminhtml_vendor_edit_tab_preferences>
                    <adminhtml_vendor_grid>Zolago_Dropship_Block_Adminhtml_Vendor_Grid</adminhtml_vendor_grid>
                </rewrite>
			</udropship>
		</blocks>
		<helpers>
			<zolagodropship>
				<class>Zolago_Dropship_Helper</class>
			</zolagodropship>
		</helpers>
		<resources>
			<zolagodropship_setup>
				<setup>
					<module>Zolago_Dropship</module>
				</setup>
			</zolagodropship_setup>
		</resources>
		<udropship>
            <vendor>
                <fieldsets>
                    <marketing>
                        <legend>Marketing content</legend>
                        <position>120</position>
                    </marketing>
                    <dhl>
                        <legend>DHL</legend>
                        <position>140</position>
                    </dhl>
                    <orbaups>
                        <legend>UPS</legend>
                        <position>160</position>
                    </orbaups>
                    <rma>
                        <legend>RMA Settings</legend>
                        <position>180</position>
                    </rma>
                </fieldsets>

                <fields>
                    <sale_commission_percent>
                        <label>SALE Commission Percentage</label>
                        <fieldset>statement</fieldset>
                        <hide_modules>Unirgy_DropshipTierCommission</hide_modules>
                        <position>11</position>
                        <default>0</default>
                    </sale_commission_percent>
                	<super_vendor_id>
                        <label>Super vendor</label>
                        <type>select</type>
						<source_model>zolagodropship/source</source_model>
                        <source>allvendorswithempty</source>
                        <fieldset>integration</fieldset>
                        <position>0</position>
                    </super_vendor_id>
                	<vendor_type>
                        <label>Vendor type</label>
                        <type>select</type>
						<source_model>zolagodropship/source</source_model>
                        <source>vendorstype</source>
                        <fieldset>integration</fieldset>
                        <position>0</position>
                    </vendor_type>
                    <can_ask>
                        <label>Customer can ask?</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>integration</fieldset>
                        <position>2</position>
                    </can_ask>

                    <sequence>
                        <label>Sequence</label>
                        <note>Vendor on main page in customized sequence</note>
                        <type>text</type>
                        <fieldset>integration</fieldset>
                        <position>3</position>
                    </sequence>
                    <vendor_type_label>
                        <label>Vendor name prefix</label>
                        <note>Can be empty</note>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>9</position>
                    </vendor_type_label>
                    <marketing_store_information_title>
                        <label>Vendor page - Seller information title</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>10</position>
                    </marketing_store_information_title>
                	<marketing_store_information>
                        <label>Vendor page - Seller information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>11</position>
                    </marketing_store_information>
                    <marketing_brand_information_title>
                        <label>Vendor page - Brand information title</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>12</position>
                    </marketing_brand_information_title>
                    <marketing_brand_information>
                        <label>Vendor page - Brand information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>13</position>
                    </marketing_brand_information>
                	<terms_seller_information>
                        <label>Product page - Seller information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>20</position>
                    </terms_seller_information>
                	<terms_delivery_information>
                        <label>Delivery information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>30</position>
                    </terms_delivery_information>
                	<terms_return_information>
                        <label>Return information</label>
                        <type>wysiwyg</type>
                        <fieldset>marketing</fieldset>
                        <position>40</position>
                    </terms_return_information>
                	<store_delivery_headline>
                        <label>Product - store section - delivery headline</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>50</position>
                    </store_delivery_headline>
                	<store_return_headline>
                        <label>Product - store section - return headline</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>60</position>
                    </store_return_headline>
                	<brandshop_info>
                        <label>Product - Brand shop info</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>75</position>
                    </brandshop_info>
                	<cart_slogan_one>
                        <label>Basket slogan no 1</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>80</position>
						<only_admin>1</only_admin>
                    </cart_slogan_one>
                	<cart_slogan_two>
                        <label>Basket slogan no 2</label>
                        <type>text</type>
                        <fieldset>marketing</fieldset>
                        <position>90</position>
						<only_admin>1</only_admin>
                    </cart_slogan_two>


                    <!--GH API-->
                    <ghapi_vendor_access_allow>
                        <label>GH API Access</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>1</position>
                    </ghapi_vendor_access_allow>

                    <ghapi_message_new_order>
                        <label>Pojawiło się nowe zamówienie do realizacji.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_new_order>
                    <ghapi_message_order_canceled>
                        <label>Zamówienie zostało anulowane.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_order_canceled>
                    <ghapi_message_order_payment_changes>
                        <label>Zmieniła się metoda płatności w zamówieniu lub/i zmieniła się się płatność do zamówienia.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_order_payment_changes>
                    <ghapi_message_order_product_changes>
                        <label>Zmieniły się produkty lub koszt dostawy w zamówieniu. Produkty mogły być usunięte, dodane, zmieniona cena, ilość, rabat.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_order_product_changes>
                    <ghapi_message_order_shipping_changes>
                        <label>Zmieniła się metoda dostawy lub/i adres dostawy.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_order_shipping_changes>
                    <ghapi_message_order_invoice_changes>
                        <label>Zmieniły się dane do faktury lub/i informacja czy faktura jest wymagana.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_order_invoice_changes>
                    <ghapi_message_order_status_changes>
                        <label>Zmienił się status zamówienia.</label>
                        <type>select</type>
                        <source>yesno</source>
                        <fieldset>ghapi_vendor_access</fieldset>
                        <position>2</position>
                        <default>1</default>
                    </ghapi_message_order_status_changes>
                    
					<!-- DHL -->
                	<use_dhl>
                        <label>Use DHL</label>
                        <type>select</type>
                        <fieldset>dhl</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <dhl_login>1</dhl_login>
                            <dhl_password>1</dhl_password>
							<dhl_account>1</dhl_account>
							<dhl_ecas>1</dhl_ecas>
							<dhl_terminal>1</dhl_terminal>
                        </depend_fields>
                        <position>10</position>
                    </use_dhl>
                	<dhl_account>
                        <label>DHL account</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>15</position>
                    </dhl_account>
                	<dhl_login>
                        <label>DHL login</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>20</position>
                    </dhl_login>
                	<dhl_password>
                        <label>DHL password</label>
                        <type>password</type>
                        <fieldset>dhl</fieldset>
                        <position>30</position>
                    </dhl_password>
                	<dhl_ecas>
                        <label>DHL eCas id</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>40</position>
                    </dhl_ecas>
                	<dhl_terminal>
                        <label>Terminal code</label>
                        <type>text</type>
                        <fieldset>dhl</fieldset>
                        <position>50</position>
                    </dhl_terminal>
                    <use_orbaups>
                        <label>Use UPS</label>
                        <type>select</type>
                        <fieldset>orbaups</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <orbaups_login>1</orbaups_login>
                            <orbaups_password>1</orbaups_password>
							<orbaups_account>1</orbaups_account>
                        </depend_fields>
                        <position>55</position>
                    </use_orbaups>
                	<orbaups_account>
                        <label>UPS license key</label>
                        <type>text</type>
                        <fieldset>orbaups</fieldset>
                        <position>60</position>
                    </orbaups_account>
                	<orbaups_login>
                        <label>UPS login</label>
                        <type>text</type>
                        <fieldset>orbaups</fieldset>
                        <position>70</position>
                    </orbaups_login>
                	<orbaups_password>
                        <label>UPS password</label>
                        <type>password</type>
                        <fieldset>orbaups</fieldset>
                        <position>80</position>
                    </orbaups_password>
                    <!-- Rma -->
                    <dhl_rma>
                        <label>Use another DHL account for RMA</label>
                        <type>select</type>
                        <fieldset>rma</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <dhl_rma_login>1</dhl_rma_login>
                            <dhl_rma_password>1</dhl_rma_password>
							<dhl_rma_account>1</dhl_rma_account>
                        </depend_fields>
                        <position>10</position>
                    </dhl_rma>
                    <orbaups_rma>
                        <label>Use another UPS account for RMA</label>
                        <type>select</type>
                        <fieldset>rma</fieldset>
                        <source>yesno</source>
						<frontend_model>udropship/adminhtml_vendor_helper_form_dependSelect</frontend_model>
						<depend_fields>
                            <orbaups_rma_login>1</orbaups_rma_login>
                            <orbaups_rma_password>1</orbaups_rma_password>
							<orbaups_rma_account>1</orbaups_rma_account>
                        </depend_fields>
                        <position>33</position>
                    </orbaups_rma>
                	<dhl_rma_account>
                        <label>Account number</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>15</position>
                    </dhl_rma_account>
                	<dhl_rma_login>
                        <label>DHL login</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>20</position>
                    </dhl_rma_login>
                	<dhl_rma_password>
                        <label>DHL password</label>
                        <type>password</type>
                        <fieldset>rma</fieldset>
                        <position>30</position>
                    </dhl_rma_password>
                	<orbaups_rma_account>
                        <label>License key</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>35</position>
                    </orbaups_rma_account>
                	<orbaups_rma_login>
                        <label>UPS login</label>
                        <type>text</type>
                        <fieldset>rma</fieldset>
                        <position>40</position>
                    </orbaups_rma_login>
                	<orbaups_rma_password>
                        <label>UPS password</label>
                        <type>password</type>
                        <fieldset>rma</fieldset>
                        <position>45</position>
                    </orbaups_rma_password>
					<!-- Product Review -->
                	<review_status>
                        <label>Product Review Status</label>
                        <type>select</type>
                        <fieldset>microsite</fieldset>
						<source_model>zolagodropship/source_review</source_model>
                        <position>800</position>
                    </review_status>					
					<!-- label store -->
					<label_store>
                        <label>Label store</label>
                        <type>select</type>
						<source_model>zolagodropship/source_store</source_model>
                        <fieldset>microsite</fieldset>
						<only_admin>1</only_admin>
                        <position>500</position>
                    </label_store>
					<!-- category -->
					<root_category>
                        <label>Root categories</label>
						<frontend_model>zolagodropship/adminhtml_vendor_helper_form_category</frontend_model>
                        <fieldset>microsite</fieldset>
						<only_admin>1</only_admin>
                        <position>600</position>
                    </root_category>
					<!-- design -->
					<custom_design>
                        <label>Custom design</label>
						<frontend_model>zolagodropship/adminhtml_vendor_helper_form_design</frontend_model>
                        <fieldset>microsite</fieldset>
						<only_admin>1</only_admin>
                        <position>700</position>
                    </custom_design>
				</fields>
			</vendor>
		</udropship>
		<events>
			<sales_order_shipment_track_save_before>
				<observers>
					<add_orba_shipping_data>
						<class>zolagodropship/observer</class>
						<method>addOrbaShippingData</method>
					</add_orba_shipping_data>
				</observers>				
			</sales_order_shipment_track_save_before>
		</events>		
	</global>
	<frontend>
		<block>
			<zolagodropship>
				<class>Zolago_Dropship_Block_Pos</class>
			</zolagodropship>
		</block>
		<events>
			<core_locale_set_locale>
                <observers>
                    <bind_locale>
                        <class>zolagodropship/observer</class>
                        <method>bindLocale</method>
                    </bind_locale>
                </observers>
            </core_locale_set_locale>
		</events>
		<routers>
			<zolagodropship>
				<use>standard</use>
				<args>
					<module>Zolago_Dropship</module>
					<frontName>zolagdropship</frontName>
				</args>
			</zolagodropship>
			<udropship>
				<args>
					<modules>
						<Zolago_Dropship before="Unirgy_Dropship">Zolago_Dropship</Zolago_Dropship>
					</modules>
				</args>
			</udropship>
		</routers>
		<layout>
			<updates>
				<zolagodropship>
					<file>zolagodropship.xml</file>
				</zolagodropship>
			</updates>
		</layout>
		<translate>
			<modules>
				<Zolago_Dropship>
					<files>
						<default>Zolago_Dropship.csv</default>
					</files>
				</Zolago_Dropship>
			</modules>
		</translate>		
		<secure_url>
		    <udropship_operator>/udropship/operator/</udropship_operator>
		    <udropship_pos>/udropship/pos/</udropship_pos>
		    <udropship_sizetable>/udropship/sizetable/</udropship_sizetable>
		    <udropship_vendor_settings>/udropship/vendor_settings/</udropship_vendor_settings>
		</secure_url>
	</frontend>
	<admin>
		<routers>
			<udropshipadmin>
				<args>
					<modules>
						<zolagodropshipl before="Unirgy_Dropship_Adminhtml">Zolago_Dropship_Adminhtml</zolagodropshipl>
					</modules>
				</args>
			</udropshipadmin>
		</routers>
	</admin>
	<adminhtml>
		<translate>
			<modules>
				<Zolago_Dropship>
					<files>
						<default>Zolago_Dropship.csv</default>
					</files>
				</Zolago_Dropship>
			</modules>
		</translate>
	</adminhtml>
</config>
