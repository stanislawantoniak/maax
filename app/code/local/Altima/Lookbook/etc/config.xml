<config>
    <modules>
        <Altima_Lookbook>
            <version>1.1.3</version>
        </Altima_Lookbook>
    </modules>
    <frontend>
        <routers>
            <lookbook>
                <use>standard</use>
                <args>
                    <module>Altima_Lookbook</module>
                    <frontName>lookbook</frontName>
                </args>
            </lookbook>
        </routers>
        <layout>
            <updates>
                <lookbook>
                    <file>lookbook.xml</file>
                </lookbook>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <lookbook before="Mage_Adminhtml">Altima_Lookbook_Adminhtml</lookbook>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cms>
                <children>
                    <lookbook translate="title" module="lookbook">
                        <title>LookBook Free</title>
                        <action>adminhtml/lookbook_lookbook</action>
                    </lookbook>
                </children>
            </cms>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <cms>
                            <children>
                                <lookbook>
                                    <title>LookBook Free</title> 
                                </lookbook>
                            </children>
                        </cms>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <lookbook>
                                            <title>LookBook Free</title>
                                        </lookbook>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <lookbook>
                    <file>lookbook.xml</file>
                </lookbook>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <lookbook>
            <general>
                <enabled>1</enabled>
                <min_image_width>300</min_image_width>
                <min_image_height>400</min_image_height>
                <max_image_width>450</max_image_width>
                <max_image_height>600</max_image_height>
                <max_upload_filesize>2097152</max_upload_filesize>
                <allowed_extensions>jpg,jpeg,png,gif</allowed_extensions>      
            </general>
        </lookbook>
    </default>    
    <global>
        <models>
            <lookbook>
                <class>Altima_Lookbook_Model</class>
                <resourceModel>lookbook_mysql4</resourceModel>
            </lookbook>
            <lookbook_mysql4>
                <class>Altima_Lookbook_Model_Mysql4</class>
                <entities>
                    <lookbook>
                        <table>lookbook</table>
                    </lookbook>
                </entities>
            </lookbook_mysql4>
        </models>
        <resources>
            <lookbook_setup>
                <setup>
                    <module>Altima_Lookbook</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lookbook_setup>
            <lookbook_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lookbook_write>
            <lookbook_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lookbook_read>
        </resources>
        <blocks>
            <lookbook>
                <class>Altima_Lookbook_Block</class>
            </lookbook>
        </blocks>
        <helpers>
            <lookbook>
                <class>Altima_Lookbook_Helper</class>
            </lookbook>
        </helpers>
        <events>
            <cms_page_render>
                <observers>
                    <lookbook_layout_generate_observer>
                        <type>singleton</type>
                        <class>lookbook/layout_generate_observer</class>
                        <method>addHeadItems</method>
                    </lookbook_layout_generate_observer>
                </observers>
            </cms_page_render>
        </events>
    </global>
</config>