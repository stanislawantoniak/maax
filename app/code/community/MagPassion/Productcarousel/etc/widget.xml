<widgets>
	<productcarousel_productcarousel_view type="productcarousel/productcarousel_widget_view" translate="view product carousel" module="productcarousel">
		<name>Product Carousel view</name>
		<description>Product Carousel view widget</description>
		<is_email_compatible>0</is_email_compatible>
		<parameters>
			<productcarousel_id type="complex" translate="label">
				<visible>1</visible>
				<required>1</required>
				<label>Product Carousel</label>
				<type>label</type>
				<helper_block>
					<type>productcarousel/adminhtml_productcarousel_widget_chooser</type>
					<data>
						<button translate="open">
							<open>Select Product Carousel</open>
						</button>
					</data>
				</helper_block>
				<sort_order>120</sort_order>
			</productcarousel_id>
		</parameters>
	</productcarousel_productcarousel_view>
</widgets>