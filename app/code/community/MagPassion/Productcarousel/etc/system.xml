<config>
	<tabs>
		<magpassion translate="label" module="productcarousel">
			<label>MagPassion</label>
			<sort_order>2000</sort_order>
		</magpassion>
	</tabs>
 	<sections>
		<productcarousel translate="label" module="productcarousel">
			<class>separator-top</class>
			<label>Product carousel</label>
			<tab>magpassion</tab>
			<frontend_type>text</frontend_type>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<productcarousel translate="label" module="productcarousel">
					<label>Product Carousel</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<loadjquery translate="label" module="productcarousel">
							<label>Loading Jquery</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</loadjquery>
                                                <carouselupsell translate="label" module="productcarousel">
							<label>Change Upsell to carousel</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</carouselupsell>
					</fields>
				</productcarousel>
			</groups>
		</productcarousel>
	</sections>
</config> 