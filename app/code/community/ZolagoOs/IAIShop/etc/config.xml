<?xml version="1.0"?>
<config>
    <modules>
        <ZolagoOs_IAIShop>
            <version>0.1.0</version>
        </ZolagoOs_IAIShop>
    </modules>
    <global>
        <helpers>
            <zosiaishop>
                <class>ZolagoOs_IAIShop_Helper</class>
            </zosiaishop>
        </helpers>
        <models>
            <zosiaishop>
                <class>ZolagoOs_IAIShop_Model</class>
            </zosiaishop>
        </models>
        <resources>
            <zosiaishop>
                <setup>
                    <module>ZolagoOs_IAIShop</module>
                </setup>
            </zosiaishop>
        </resources>
        <blocks>
            <zosiaishop>
                <class>ZolagoOs_IAIShop_Block</class>
            </zosiaishop>
        </blocks>
    </global>
    <frontend>
        <routers>
            <zosiaishop>
                <use>standard</use>
                <args>
                    <module>ZolagoOs_IAIShop</module>
                    <frontName>iaishop</frontName>
                </args>
            </zosiaishop>
        </routers>
        <layout>
            <updates>
                <zosiaishop>
                    <file>zosiaishop.xml</file>
                </zosiaishop>
            </updates>
        </layout>
        <translate>
            <modules>
                <ZolagoOs_IAIShop>
                    <files>
                        <default>ZolagoOs_IAIShop.csv</default>
                    </files>
                </ZolagoOs_IAIShop>
            </modules>
        </translate>
        <secure_url>
            <zosiaishop_settings>/iaishop/settings</zosiaishop_settings>
            <zosiaishop_settings>/iaishop/settings/save</zosiaishop_settings>
        </secure_url>
    </frontend>
    <crontab>
        <jobs>
            <zosiaishop_iaishop_sync>
                <schedule>
                    <!-- Run evry 5 min  -->
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>zosiaishop/observer::syncIAIShop</model>
                </run>
            </zosiaishop_iaishop_sync>
        </jobs>
    </crontab>
</config>