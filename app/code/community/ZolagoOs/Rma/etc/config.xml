                            <vendor_attn>custom</vendor_attn>
                        </depend_fields>
                    </rma_use_address>
                    <vendor_attn>
                        <fieldset>rma</fieldset>
                        <label>Attention To</label>
                        <type>text</type>
                    </vendor_attn>
                    <telephone>
                        <label>Phone Number</label>
                        <fieldset>rma</fieldset>
                        <type>text</type>
                    </telephone>
                    <email>
                        <label>Email Address</label>
                        <fieldset>rma</fieldset>
                        <type>text</type>
                    </email>
                    <street1>
                        <fieldset>rma</fieldset>
                        <label>Street Address</label>
                        <type>text</type>
                    </street1>
                    <street2>
                        <fieldset>rma</fieldset>
                        <label>Street Address Line 2</label>
                        <type>text</type>
                    </street2>
                    <city>
                        <fieldset>rma</fieldset>
                        <label>City</label>
                        <type>text</type>
                    </city>
                    <zip>
                        <fieldset>rma</fieldset>
                        <label>Zip/Postal Code</label>
                        <type>text</type>
                    </zip>
                    <region_id>
                        <fieldset>rma</fieldset>
                        <label>State/Province</label>
                        <type>select</type>
                    </region_id>
