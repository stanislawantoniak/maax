<?xml version="1.0"?>
<config>
	<tabs>
		<modago> <!-- no translate as it's our store name -->
			<label>Modago</label>
			<sort_order>101</sort_order>
		</modago>
	</tabs>
	<sections>
		<modagointegrator translate="label" module="modagointegrator">
			<label>Integrator</label>
			<tab>modago</tab>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>0</show_in_website>
			<show_in_store>0</show_in_store>
			<groups>
				<authentication translate="label" module="modagointegrator">
					<label>Authentication</label>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<external_id translate="label">
							<label>Vendor ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</external_id>
						<secret translate="label">
							<label>Secret key</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</secret>
						<integration_store translate="label">
							<label>Price source</label>
							<frontend_type>select</frontend_type>
							<source_model>modagointegrator/system_config_source_store</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Shop/Language whose price is charged</comment>
						</integration_store>
					</fields>
				</authentication>
				<api translate="label" module="modagointegrator">
					<label>Api</label>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</enabled>
						<api_url translate="label">
							<!-- for test only -->
							<label>API Url</label>
							<frontend_type>text</frontend_type>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
							<validate>required-entry</validate>
						</api_url>
						<login translate="label">
							<label>Partner ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
							<validate>required-entry</validate>
						</login>
						<api_key translate="label">
							<label>API Key</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
							<validate>required-entry</validate>
						</api_key>
						<password translate="label">
							<label>API Password</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
							<validate>required-entry</validate>
						</password>
						<store translate="label">
							<label>Store for new orders</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_store</source_model>
							<comment>In this store new orders will be created</comment>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
							<validate>required-entry</validate>
						</store>
						<password translate="label">
							<label>API Password</label>
							<frontend_type>text</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends>
								<enabled>1</enabled>
							</depends>
							<validate>required-entry</validate>
						</password>
						<log_days translate="label">
							<label>Keep logs for</label>
							<comment>Days</comment>
							<frontend_type>text</frontend_type>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<validate>validate-digits validate-zero-or-greater required-entry</validate>
							<depends>
								<enabled>1</enabled>
							</depends>
						</log_days>
						<batch_size translate="label">
							<label>Batch size</label>
							<frontend_type>text</frontend_type>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<validate>validate-digits validate-zero-or-greater required-entry</validate>
							<depends>
								<enabled>1</enabled>
							</depends>
						</batch_size>
					</fields>
				</api>
			</groups>
		</modagointegrator>
	</sections>
</config>