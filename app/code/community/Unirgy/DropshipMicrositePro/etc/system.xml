                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </fieldsets>
                    </fields>
                </form>
            </groups>
        </udsignup>
        <udropship>
            <groups>
                <microsite>
                    <fields>
                        <skip_confirmation translate="label">
                            <label>Skip confirmation email</label>
