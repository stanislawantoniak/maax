                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <fieldsets translate="label">
                            <label>Fieldsets</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>udmspro/adminhtml_systemConfigField_fieldsetsConfig</frontend_model>
                            <backend_model>udmspro/systemConfig_backend_fieldsetsConfig</backend_model>
