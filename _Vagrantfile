# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  
  # config.ssh.forward_agent = true

  config.vm.hostname = "local.zalogo.com"

  config.vm.box = "saucy32" 

  config.vm.box_url = "https://cloud-images.ubuntu.com/vagrant/saucy/current/saucy-server-cloudimg-i386-vagrant-disk1.box"
  
  config.vm.network :private_network, ip: "192.168.50.4"
 
  config.vm.provision :shell, :path => "env/bootstrap.sh"

  config.vm.provision :puppet do |puppet|
    puppet.manifests_path = "env/manifests"
    puppet.manifest_file = "default.pp"
    puppet.module_path = "env/modules"
    puppet.options = "--verbose --debug"
  end

end
